<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card mt-2">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">{{title}} <a
                        href="/notes/edit/{{_id}}"><i class="fa fa-pencil"></i></a></h4>
                <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE" class="form-control">
                        <button type="submit" class="btn btn-danger btn-block">Delete</button>
                    </form>   
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h3>Hello {{user.name}}</h3>
            <p class="lead">There are not notes yet.</p>
            <a href="/notes/add" class="btn btn-primary btn-block">Create one</a>
        </div>
    </div>
    {{/each}}
</div>